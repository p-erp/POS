<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inventory.inventory_fragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight=".333"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/view_items"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/inventory_view_item" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="View Items"
                android:textColor="#868686"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight=".333"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/update_items"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/inventory_add_category" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Add Category"
                android:textColor="#868686"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight=".333"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/add_items"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/inventory_add_item" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Add Items"
                android:textColor="#868686"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>