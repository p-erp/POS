<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242f39"
    tools:context=".login.login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:text="POS System"
                android:textColor="#d35400"
                android:textSize="50dp"
                app:fontFamily="serif" />

            <TextView
                android:id="@+id/app_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="An Point of Sales System For [Company Name]"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:theme="@style/activity_login_inputLayout"
                app:errorEnabled="true">


                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:drawablePadding="20dp"
                    android:focusableInTouchMode="true"
                    android:hint="Username"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="#d35400"
                    android:textColorHint="#d35400" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:theme="@style/activity_login_inputLayout"
                app:errorEnabled="true"
                app:hintAnimationEnabled="true"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#d35400">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:drawablePadding="20dp"
                    android:focusableInTouchMode="true"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textColor="#d35400"
                    android:textColorHint="#d35400" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/activity_login_button"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:text="login" />

            <TextView
                android:id="@+id/createAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create New Account"
                android:textColor="#FFF"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal"/>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>